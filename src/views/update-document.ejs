<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body class="g-sidenav-show bg-gray-200">
    <% include ./partials/navbar.ejs %>

    <main
      class="main-content position-relative max-height-vh-100 h-100 border-radius-lg"
    >
      <div class="comp-list">
        <div class="container-fluid py-4">
          <!--  -->
          <div class="mb-md-0 mb-4">
            <div class="card my-4">
              <div
                class="card-header p-0 position-relative mt-n4 mx-3 z-index-2"
              >
                <div
                  class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3"
                >
                  <h6 class="text-white text-capitalize ps-3">
                    Document management
                  </h6>
                </div>
              </div>
              <div class="card-body px-0 pb-2 pt-3">
                <div class="update-form">
                  <form
                    action="/document/update/<%= document.id %>"
                    method="POST"
                    id="updateDocumentForm"
                  >
                    <h3 class="text-center">Update Document</h3>

                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <span>Content</span>
                          <input
                            type="text"
                            name="title"
                            class="form-control"
                            placeholder="Title..."
                            id="title"
                            value="<%= document.title%>"
                          />
                          <span class="form-message"></span>
                        </div>
                      </div>

                      <div class="col-md-12">
                        <div class="form-group">
                          <span>Link</span>
                          <input
                            type="text"
                            name="link"
                            class="form-control"
                            placeholder="www.example.com"
                            id="link"
                            value="<%= document.link%>"
                          />
                          <span class="form-message"></span>
                        </div>
                      </div>

                      <div class="col-12">
                        <div class="form-group">
                          <span>Comment content</span>
                          <textarea
                            class="form-control"
                            name="description"
                            id="description"
                            cols="30"
                            rows="5"
                            placeholder="Description..."
                          >
<%= document.description%>
                        </textarea
                          >
                        </div>
                      </div>
                    </div>

                    <div class="btn-addComp mt-3 text-center">
                      <input
                        type="submit"
                        value="Update"
                        class="btn btn-primary pe-3 ps-3 text-md"
                      />
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <% include ./partials/extend.ejs %>
    <script src="/js/login.js"></script>
    <script src="/js/document.js"></script>
  </body>
</html>
