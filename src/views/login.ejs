<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body class="g-sidenav-show bg-gray-200">
    <div class="container-fluid">
      <div class="container">
        <form class="login-form p-4" action="/login" method="POST">
          <h3 class="text-center fw-bold">Sign In</h3>

          <% if (type == 'login') { %> <% if (success) { %>
          <p class="message-suscess"><%= success %></p>
          <%} else { %>
          <p class="message-error"><%= error %></p>
          <% }} %>

          <!-- <div class="form-group message">
                    <p class="">Tài khoản hoặc mật khẩu không chính xác!</p>
                </div> -->

          <div class="form-group">
            <span>Username</span>
            <input
              type="text"
              name="username"
              class="form-control"
              placeholder="example@example.com"
              id="loginUsername"
            />
          </div>

          <div class="form-group">
            <span>Password</span>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="Enter your password"
              id="loginPass"
            />
          </div>

          <input
            type="submit"
            value="Sign In"
            class="btn btn-primary btn-signin my-4 pe-3 ps-3"
          />

          <!-- <p class="mb-2">Forget password ? <a href="#">Click here!</a></p> -->
          <p>Don't have an account ? <a href="/register">Create one!</a></p>
        </form>
      </div>
    </div>

    <% include ./partials/extend.ejs %>
    <script src="/js/login.js"></script>
  </body>
</html>
